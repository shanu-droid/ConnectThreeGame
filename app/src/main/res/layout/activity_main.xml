<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7B1A3B"
    tools:context=".MainActivity">


    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="282dp"
        android:layout_height="335dp"
        android:background="@drawable/boardnew"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myTextView">

        <ImageView
            android:id="@+id/blue_coin2"
            android:layout_width="73dp"
            android:layout_height="89dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:onClick="dropCoin"
            android:tag="0"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/blue_coin3"
            android:layout_width="73dp"
            android:layout_height="89dp"
            android:layout_margin="10dp"
            android:onClick="dropCoin"
            android:tag="1"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/blue_coin4"
            android:layout_width="73dp"
            android:layout_height="89dp"
            android:layout_margin="10dp"
            android:onClick="dropCoin"
            android:tag="2"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/blue_coin5"
            android:layout_width="73dp"
            android:layout_height="89dp"
            android:layout_margin="10dp"
            android:onClick="dropCoin"
            android:tag="3"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/blue_coin6"
            android:layout_width="73dp"
            android:layout_height="89dp"
            android:layout_margin="10dp"
            android:onClick="dropCoin"
            android:tag="4"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/blue_coin7"
            android:layout_width="73dp"
            android:layout_height="89dp"
            android:layout_margin="10dp"
            android:onClick="dropCoin"
            android:tag="5"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/blue_coin8"
            android:layout_width="73dp"
            android:layout_height="89dp"
            android:layout_margin="10dp"
            android:onClick="dropCoin"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/blue_coin9"
            android:layout_width="73dp"
            android:layout_height="89dp"
            android:layout_margin="10dp"
            android:onClick="dropCoin"
            android:tag="7"
            app:layout_column="2"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/blue_coin1"
            android:layout_width="73dp"
            android:layout_height="89dp"
            android:layout_margin="10dp"
            android:onClick="dropCoin"
            android:tag="8"
            app:layout_column="0"
            app:layout_row="0" />
    </GridLayout>

    <Button
        android:id="@+id/play_again"
        android:layout_width="117dp"
        android:layout_height="44dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="playAgain"
        android:text="@string/play_again"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTextView" />

    <TextView
        android:id="@+id/myTextView"
        android:layout_width="231dp"
        android:layout_height="51dp"
        android:background="#DC03F4BC"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>